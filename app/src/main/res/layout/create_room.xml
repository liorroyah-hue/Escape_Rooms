<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/Backround"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/outline_airport_shuttle_24"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/PictureForObject"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/outline_android_wifi_3_bar_24"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <!-- Button 1 -->
    <Button
        android:id="@+id/buttoninsidePictureForObject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 1"
        android:layout_below="@id/PictureForObject"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <!-- Button 2 -->
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 2"
        android:layout_below="@id/buttoninsidePictureForObject"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>