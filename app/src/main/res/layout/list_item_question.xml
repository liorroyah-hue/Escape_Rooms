<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/room_surface"
    app:cardCornerRadius="8dp"
    app:strokeColor="@color/room_primary"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/question_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is where the question will be displayed."
            android:textSize="18sp"
            android:textColor="@color/room_accent"
            android:textStyle="bold"
            android:letterSpacing="0.02" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/room_primary"
            android:alpha="0.3"
            android:layout_marginVertical="12dp" />

        <RadioGroup
            android:id="@+id/answers_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/room_primary">

            <!-- RadioButtons will be added here dynamically from the code -->

        </RadioGroup>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
