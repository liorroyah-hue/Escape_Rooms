<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/room_dark_bg"
    android:padding="16dp"
    android:layoutDirection="rtl"
    tools:context="com.example.escape_rooms.ui.HomePage">

    <TextView
        android:id="@+id/tv_title_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:letterSpacing="0.1"
        android:text="@string/home_title"
        android:textColor="@color/room_primary"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/titleDivider"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@color/room_accent"
        app:layout_constraintStart_toStartOf="@id/tv_title_main"
        app:layout_constraintTop_toBottomOf="@id/tv_title_main" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleDivider">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/MyEscapeRoom"
                style="@style/Widget.EscapeRooms.Button"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginBottom="16dp"
                android:text="@string/btn_original_room"
                android:gravity="center_vertical|start"
                android:paddingStart="24dp"
                app:icon="@android:drawable/ic_media_play"
                app:iconGravity="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/CommunityEscapeRoom"
                style="@style/Widget.EscapeRooms.Button"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/room_surface"
                android:text="@string/btn_community_rooms"
                android:textColor="@color/room_accent"
                android:gravity="center_vertical|start"
                android:paddingStart="24dp"
                app:icon="@android:drawable/ic_menu_search"
                app:iconGravity="textStart"
                app:iconTint="@color/room_accent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/MyEscapeRoom"
                app:strokeColor="@color/room_accent"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/CreateRoom"
                style="@style/Widget.EscapeRooms.Button"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:text="@string/btn_create_room"
                android:gravity="center_vertical|start"
                android:paddingStart="24dp"
                app:icon="@android:drawable/ic_input_add"
                app:iconGravity="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/CommunityEscapeRoom" />

            <View
                android:id="@+id/innerDivider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="32dp"
                android:alpha="0.2"
                android:background="@color/text_secondary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/CreateRoom" />

            <Button
                android:id="@+id/LER"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/btn_login"
                android:textColor="@color/text_secondary"
                app:layout_constraintEnd_toStartOf="@+id/SER"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/innerDivider" />

            <Button
                android:id="@+id/SER"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_signup"
                android:textColor="@color/text_secondary"
                app:layout_constraintBottom_toBottomOf="@+id/LER"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/LER"
                app:layout_constraintTop_toTopOf="@+id/LER" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
