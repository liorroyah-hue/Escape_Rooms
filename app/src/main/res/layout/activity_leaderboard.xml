<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/room_dark_bg"
    android:padding="24dp"
    tools:context=".ui.LeaderboardActivity">

    <TextView
        android:id="@+id/tv_leaderboard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:letterSpacing="0.2"
        android:text="TOP OPERATIVES"
        android:textColor="@color/room_primary"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/leaderboard_divider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/room_accent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_leaderboard_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_leaderboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@id/btn_exit_leaderboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/leaderboard_divider"
        tools:listitem="@layout/item_leaderboard_entry" />

    <ProgressBar
        android:id="@+id/pb_leaderboard_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/room_accent"
        app:layout_constraintBottom_toBottomOf="@id/rv_leaderboard"
        app:layout_constraintEnd_toEndOf="@id/rv_leaderboard"
        app:layout_constraintStart_toStartOf="@id/rv_leaderboard"
        app:layout_constraintTop_toTopOf="@id/rv_leaderboard" />

    <Button
        android:id="@+id/btn_exit_leaderboard"
        style="@style/Widget.EscapeRooms.Button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="RETURN TO HQ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
