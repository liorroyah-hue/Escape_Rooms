<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Escape_Rooms" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Main background and surface colors -->
        <item name="android:windowBackground">@color/room_dark_bg</item>
        <item name="colorPrimary">@color/room_primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/room_accent</item>
        <item name="colorSurface">@color/room_surface</item>
        <item name="android:textColorPrimary">@color/room_text</item>
        <item name="android:textColorSecondary">@color/room_text_dim</item>
        
        <!-- Customize navigation bar and status bar -->
        <item name="android:statusBarColor">@color/room_dark_bg</item>
        <item name="android:navigationBarColor">@color/room_dark_bg</item>
    </style>

    <!-- Custom Button Style - Industrial Look -->
    <style name="Widget.EscapeRooms.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/room_primary</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">4dp</item> <!-- Sharp corners for industrial feel -->
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>
    </style>
</resources>
